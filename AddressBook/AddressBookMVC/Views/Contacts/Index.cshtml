@model X.PagedList.PagedList<AddressBookDataAccess.Models.People.Person>
@using X.PagedList.Mvc.Core;
@using X.PagedList;

@{
    ViewData["Title"] = "People";
}

<h1>People</h1>


<p>
    <a class="removeLinkStyling" asp-action="Create">New Entry <i class="fas fa-plus-circle"></i></a>
</p>
@foreach (var item in Model)
{
    <div class="row no-gutters">
        <div class="card mb-3 col-md-10" style="max-width: 540px;">


            <div class="card-body">
                <h5 class="card-title">@Html.ActionLink(item.FullName, "Details", new { id = item.Id })</h5>
                <p class="card-text">
                    <small class="text-muted">
                        Email Addresses: 0 | Phone Numbers: 0 | Addresses: 0
                    </small>
                </p>
            </div>

        </div>

        <div class="col-md-2">
            <a href="#" class="btn btn-danger" id="personButtons">
                @* delete using id of item, display warning *@
                <i class="fas fa-trash"></i>
            </a>
        </div>
    </div>
}

    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
    @Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }))
