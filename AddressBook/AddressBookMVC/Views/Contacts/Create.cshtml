@model AddressBookMVC.Models.ViewModels.PersonSubmitViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>PersonSubmitViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreatePerson" id="form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div id="emailsContainer">
                @*<label asp-for="EmailAddresses" class="control-label"></label>
                <input asp-for="EmailAddresses" class="form-control" />
                <span asp-validation-for="EmailAddresses" class="text-danger"></span>*@

                @*NOTE: This will cause the program to break on Create()*@
                @Html.EditorFor(model=>model.EmailAddresses)
            </div>
            <div class="row">
                <div class="col-md-4">
                    <input class="btn btn-default" type="button" id="btnAdd" value="Add E-mail Address" />
                </div>
                @*<div class="col-md-2">
                    <input type="submit" value="AddEmailAddress" id="submit" class="btn btn-default" />
                </div>*@
            </div>

            <div class="form-group">
                <input type="submit" value="CreatePerson" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>





<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $('#btnAdd').click(function () {
            $.ajax({
                async: true,
                data: $('#form').serialize(),
                type: "POST",
                url: "@Url.Action("AddEmailAddress", "Contacts")",
                success: function (partialView) {
                    console.log("partialView: " + partialView);                    
                    const $fields = $('#emailsContainer');
                    $(partialView).appendTo($fields);
                }
            });
        });
    </script>
}
